<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="3dp"
    app:cardElevation="5dp"
    android:layout_margin="5dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/meet_doctor_image"
            android:src="@drawable/ic_person"
            android:layout_alignParentStart="true"
            />
        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/meet_doctor_name"
            android:textSize="20sp"
            android:text="Doctor Name"
            android:layout_toEndOf="@id/meet_doctor_image"
            />
        <TextView
            android:layout_below="@id/meet_doctor_name"
            android:layout_marginStart="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/meet_doctor_location"
            android:text="Location"
            android:layout_toEndOf="@id/meet_doctor_image"
            />
        <TextView
            android:layout_below="@id/meet_doctor_location"
            android:layout_marginStart="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/meet_doctor_availability"
            android:text="availability"
            android:layout_toEndOf="@id/meet_doctor_image"
            />
        <TextView
            android:layout_below="@id/meet_doctor_availability"
            android:layout_marginStart="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/meet_doctor_presence"
            android:text="presence"
            android:layout_toEndOf="@id/meet_doctor_image"
            />
    </RelativeLayout>

</androidx.cardview.widget.CardView>