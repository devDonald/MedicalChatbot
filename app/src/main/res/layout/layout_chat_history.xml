<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp"
    android:id="@+id/lay_chat_history"
    android:layout_margin="5dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/chat_history_image"
            android:src="@drawable/ic_person"
            android:layout_alignParentStart="true"
            />
        <TextView
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/chat_history_name"
            android:textSize="20sp"
            android:text="Name"
            android:layout_toEndOf="@id/chat_history_image"
            />
        <TextView
            android:layout_below="@id/chat_history_name"
            android:layout_marginStart="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/chat_history_chat"
            android:text="latest response"
            android:layout_toEndOf="@id/chat_history_image"
            />
    </RelativeLayout>
</androidx.cardview.widget.CardView>