<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/welcome_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:textColor="@color/colorWhite"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textAlignment="center"
       />
    <TextView
        android:id="@+id/welcome_text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:textColor="@color/colorWhite"
        android:textSize="18sp"
        android:padding="5dp"
        android:text="Welcome to the Medical Chat Bot, How may i help you?"
        android:textStyle="bold"
        android:textAlignment="center"
        />


    <Button
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:id="@+id/bot_care"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:background="@drawable/border_white"
        android:text="Chat with Medcare"
        android:textColor="@color/colorWhite"
        android:textSize="20sp"
        android:textStyle="bold"

        />

    <TextView
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Are you not satisfied? "
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        android:textStyle="bold"
        android:visibility="gone"
        />
    <Button
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:id="@+id/chat_doctor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/btn_login_bg"
        android:text="Meet a Doctor"
        android:visibility="gone"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        android:textStyle="bold"

        />

</LinearLayout>